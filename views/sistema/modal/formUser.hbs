<head>
    <link rel="stylesheet" href="/stylesheets/sistema/modal-form.css">
</head>
{{> Loader}}
<div class="frm-wrapper">
    <span class="message-reserr">Lorem, ipsum dolor.</span>
    <h1>perfil</h1>
    <form id="user" act="update">
        <input type="text" oldname="{{user.name}}" name="name" placeholder="ingrese usuario" value="{{user.name}}" required>
        <span class="password">
            <input type="password" name="pass" placeholder="ingrese contraseña" required>
            <a href="#ver"><i class="fa fa-eye" aria-hidden="true"></i></a>
        </span>
        <span class="password">
            <input type="password" name="repeat" placeholder="repita contraseña" required>
            <a href="#ver"><i class="fa fa-eye" aria-hidden="true"></i></a>
        </span>
        <input type="text" name="fullname" placeholder="ingrese nombre completo" value="{{user.fullname}}" required>
        <input type="email" name="email" placeholder="ingrese correo" value="{{user.email}}" required>
        <input type="submit" value="guardar">
    </form>
</div>

<script src="/javascripts/sistema/formUser.js"></script>